{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "deno"
    ]
  },
  "include": [
    "**/*.ts",
    "deno.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}